menuconfig IIM42652
    bool "TDK IIM42652 6-axis IMU"
    default y
    depends on DT_HAS_TDK_IIM42652_ENABLED
    select I2C
    help
      Enable driver for TDK IIM42652 6-axis IMU.

if IIM42652

config IIM42652_ACC_CUSTOM_CONFIG
    bool "Accelerometer custom configuration"
    default n
    depends on IIM42652
    help
      Enable Accelerometer configuration customization.

if IIM42652_ACC_CUSTOM_CONFIG

choice
    prompt "Range configuration"
    default IIM42652_ACC_4G_RANGE

config IIM42652_ACC_2G_RANGE
    bool "2G"
    depends on IIM42652_ACC_CUSTOM_CONFIG

config IIM42652_ACC_4G_RANGE
    bool "4G"
    depends on IIM42652_ACC_CUSTOM_CONFIG

config IIM42652_ACC_8G_RANGE
    bool "8G"
    depends on IIM42652_ACC_CUSTOM_CONFIG

config IIM42652_ACC_16G_RANGE
    bool "16G"
    depends on IIM42652_ACC_CUSTOM_CONFIG

endchoice

