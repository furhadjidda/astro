    bool "500Hz"
    depends on IIM42652_ACC_CUSTOM_CONFIG

config IIM42652_ACC_1000HZ_BANDWIDTH
    bool "1000Hz"
    depends on IIM42652_ACC_CUSTOM_CONFIG

